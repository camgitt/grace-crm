# GRACE CRM Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (Database) - Required
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# CLERK (Authentication)
# ===========================================
# Get these from: https://dashboard.clerk.com
# Required for user authentication and team management
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# ===========================================
# STRIPE (Payments)
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
# Required for online giving and recurring donations
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ===========================================
# RESEND (Email)
# ===========================================
# Get these from: https://resend.com/api-keys
# Required for sending emails (welcome, follow-up, reminders)
VITE_RESEND_API_KEY=re_xxx
VITE_EMAIL_FROM_ADDRESS=noreply@yourdomain.com
VITE_EMAIL_FROM_NAME=Grace Community Church

# ===========================================
# TWILIO (SMS)
# ===========================================
# Get these from: https://console.twilio.com
# Required for sending SMS messages (reminders, notifications)
VITE_TWILIO_ACCOUNT_SID=ACxxx
VITE_TWILIO_AUTH_TOKEN=your-auth-token
VITE_TWILIO_PHONE_NUMBER=+1234567890
